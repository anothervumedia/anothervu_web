<div class="container" id="input">
  <h2>Sign in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form>
      <div class="form-group">
        <%= f.label :email, for: "emailInput"%><br />
        <%= f.email_field :email, {placeholder: "Email", class: "form-control", id: "emailInput", autofocus: true} %>
      </div>
      <div class="form-group">
        <%= f.label :password, for: "passwordInput" %>
        <%= f.password_field :password, {placeholder: "Password", class: "form-control", id: "passwordInput", autocomplete: "off"} %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <%= f.submit "Sign in", class: "btn btn-default" %>
    </form>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

