<div class="container css-2s1366 center-form" id="input">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <form>
      <div class="form-group">
        <%= f.label :email, for: "emailInput"%><br />
        <%= f.email_field :email, {placeholder: "Email", class: "form-control", id: "emailInput", autofocus: true} %>
      </div>
      <div class="form-group">
        <%= f.label :password, for: "passwordInput" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, {placeholder: "Password", class: "form-control", id: "passwordInput", autocomplete: "off"} %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, for: "passwordConfirmationInput" %>
        <%= f.password_field :password_confirmation, {placeholder: "Retype Password", class: "form-control", id: "passwordConfirmationInput", autocomplete: "off"} %>
      </div>
      <p>By signing up, you confirm that you have read, and agree to, the <strong><%= link_to "Terms and Conditions", terms_path %></strong>.</p>

      <div class="row">
      <div class="col-xs-8 col-sm-6 col-md-4">
      <%= f.submit "Sign up", class: "btn btn-default btn-block" %>
      <% end %>
      </div>
    </div>
    </form>


  <%= render "devise/shared/links" %>
</div>