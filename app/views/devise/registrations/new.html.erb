<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <form>
      <div class="form-group">
        <%= f.label :email, for: "emailInput"%><br />
        <%= f.email_field :email, {placeholder: "Email", class: "form-control", id: "emailInput", autofocus: true} %>
      </div>
      <div class="form-group">
        <%= f.label :password, for: "passwordInput" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, {placeholder: "Password", class: "form-control", id: "passwordInput", autocomplete: "off"} %>
      </div>
      <%= f.submit "Sign up", class: "btn btn-default" %>
    </form>
  <% end %>

  <%= render "devise/shared/links" %>
</div>