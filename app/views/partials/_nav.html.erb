  <nav class="navbar navbar-default css-2s1366">
    <div class="container css-2s1366">
      <div class="navbar-header">
         <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-nav-demo" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "AnotherVU", feed_path, class: "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="bs-nav-demo">
        <ul class="nav navbar-nav navbar-right">
          <li class="search-bar">
            <%= form_tag(feed_path, :method => "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search Projects" %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            Sign Out
            <% end %>
          </li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to feed_path do %>
            Home
            <% end %>
          </li>

          <li>
            <%= link_to projects_path do %>
              Your Projects
            <% end %>
          </li>
         <!--  <li>
             <%= link_to "Messages", conversations_path, class: "item" %>
          </li> -->
          <li class="divider">
            |
          </li>
          <li>
            <% if current_user.first_name == "" %>
               <%= link_to user_path(current_user) do %>
                <%= current_user.email %>
                <% end %>
            <% elsif current_user.first_name.nil? %>
                <%= link_to user_path(current_user) do %>
                <%= current_user.email %>
                <% end %>
            <% else %>
              <%= link_to user_path(current_user) do %>
              <%= current_user.first_name %>
              <% end %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
<% end %>
