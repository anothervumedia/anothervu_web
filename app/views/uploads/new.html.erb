<% @page_title = "Add Image" %>
<% content_for :footer_javascript do  %>
  <%= javascript_include_tag "pages/upload" %>
<% end %>

<div class="container new-upload projects-container css-2s1366">
  <div class="row">
  <div class="col-sm-4">
  <h3><%= link_to "Edit Project Info", edit_project_path(@project) %></h3>
  <h3><%= link_to "Add Photos", new_project_upload_path(@project) %></h3>
  </div>

  <div class="col-sm-8">
  <%= form_for [@project, @upload] do |f| %>
    <div class="edit-profile-form">
      <div class="row edit-profile" id="profile-margin">
      <div class="col-sm-12 col-md-8">
        <%= f.cl_image_upload(:image, return_delete_token: true, :html => { :multiple => true }) %>
        <%= f.submit "Save", :class => 'btn btn-default btn-block top-10' %>
        <% end %>
        <div class="top-10">- OR -</div>
        <div id="dropZone" class="top-10">
        <p>Drag/Drop Files Here</p>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6">
        <div class="status"></div>
        <div class="preview"></div>
      </div>


      </div>
    </div>
  </div>

    <%= cloudinary_js_config %>
  </div>
</div>

