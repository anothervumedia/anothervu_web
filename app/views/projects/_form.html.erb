<%= form_for @project do |f| %>
  <%= f.label :name, "Name", :class => 'col-sm-12 col-md-12 name' %>
  <%= f.text_field :name, :class => 'user-bio col-sm-10 col-md-6 form'%>
  </br>
  <%= f.label :description, "Description", :class => 'col-sm-12 col-md-12 name' %>
  </br>
  <%= f.text_area :description, rows: 5, cols: 30, :class => 'user-bio col-sm-10 col-md-6 form' %>
  <%= f.submit "Save", :class => 'd-block btn btn-success col-sm-2 joe-btn' %>
<% end %>
