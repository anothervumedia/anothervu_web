<% @page_title = "Your Projects" %>

<div class="container projects-container css-2s1366">
  <h3>Your Projects</h3>
  </br>

  <%= link_to new_project_path, class: "btn btn-default" do %>
    <i class="fa fa-plus"></i>
    Add Project
  <% end %>
  </br>
  </br>

  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th style="text-align: center;">Project Name</th>
        <th style="text-align: center;">Description</th>
        <th style="text-align: center;">Items Uploaded</th>
        <th style="text-align: center;">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each_with_index do |project, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td style="text-align: center;"><%= project.uploads.count %></td>
          <td style="text-align: center;">
            <%= link_to "View", project_path(project) %>
            <%= link_to "Edit", project_path(project) %>
            <%= link_to "Delete", project_path(project), method: :delete, data: { confirm: 'Delete project and its uploads?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
