<% @page_title = "#{@project.name}" %>
<% content_for :footer_javascript do  %>
  <%= javascript_include_tag "pages/project" %>
<% end %>

<div id="showProject" class="container" data-project-id="<%= @project.id %>" data-hearts-url="<%= hearts_path %>">
  <h3>
    <span><%= @project.name %></span>
    <span>
      <% if @heart.present? %>
        <span class="project-heart favorited" data-heart-id="<%= @heart.id %>">
          <i class="fa fa-heart"></i>
        </span>
      <% else %>
        <span class="project-heart">
          <i class="fa fa-heart-o"></i>
        </span>
      <% end %> 
    </span>
  </h3>
  <p>
    <span>Creator: </span>
    <span><%= link_to "#{@creator.first_name} #{@creator.last_name}", user_path(@creator) %></span>
    </p>
  <p><%= @project.description %></p>

  <div class="row project-upload-row">
    <% @uploads.each do |upload| %>
      <div class="col-xs-4 upload" data-id="<%= upload.id %>">
        <%# TODO: look into client hints width: :auto, client_hints: true, crop: :scale %>
        <%= cl_image_tag upload.image_url, width: 300, height: 300, crop: :crop %>
      </div>
    <% end %>
  </div>
</div>
